<controls:BlankWindow x:Class="GifCreator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GifCreator"
        xmlns:controls="clr-namespace:WpfInfras.Controls;assembly=WpfInfrastructure"
        mc:Ignorable="d" 
        Loaded="Window_Loaded"
        DataContext="{Binding MainVm,Source={StaticResource Locator}}"

        Title="Gif生成器" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <MediaElement Source="{Binding VideoSource}" LoadedBehavior="Manual" x:Name="mePlayer"  />
        <StackPanel Grid.Row="1" Height="30" VerticalAlignment="Bottom" Orientation="Horizontal">
            <Button Margin="10,0" Click="Button_Click">打开</Button>
            <Button  Margin="10,0" Content="生成" FontFamily="Segoe UI Symbol"></Button>
            <controls:ModernButton>abc</controls:ModernButton>
            <controls:ModernProgressRing IsActive="True"></controls:ModernProgressRing>
        </StackPanel>
    </Grid>
</controls:BlankWindow>
